---
// src/components/home/FeaturedProducts.astro
import ProductCard from '../shop/ProductCard.astro';
import { mockProducts } from '../../data/mockData';

// Agregar más productos para mejor visualización
const featuredProducts = [
  ...mockProducts,
  {
    id: '3',
    name: 'Blazer Estructurado',
    slug: 'blazer-estructurado',
    price: 189.99,
    images: ['https://images.unsplash.com/photo-1591047139829-d91aecb6caea?w=800&q=80'],
    category: { name: 'Mujer' },
    featured: true,
  },
  {
    id: '4',
    name: 'Vestido Satín',
    slug: 'vestido-satin',
    price: 149.99,
    sale_price: 119.99,
    images: ['https://images.unsplash.com/photo-1595777457583-95e059d581b8?w=800&q=80'],
    category: { name: 'Mujer' },
    featured: true,
  },
  {
    id: '5',
    name: 'Sneakers Premium',
    slug: 'sneakers-premium',
    price: 179.99,
    images: ['https://images.unsplash.com/photo-1549298916-b41d501d3772?w=800&q=80'],
    category: { name: 'Accesorios' },
    featured: true,
  },
  {
    id: '6',
    name: 'Camisa Oxford',
    slug: 'camisa-oxford',
    price: 89.99,
    images: ['https://images.unsplash.com/photo-1596755094514-f87e34085b2c?w=800&q=80'],
    category: { name: 'Hombre' },
    featured: true,
  }
];
---

<section class="py-20 bg-white">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-light mb-4">Productos Destacados</h2>
      <p class="text-gray-600 text-lg">Selección curada de nuestras mejores piezas</p>
    </div>
    
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">
      {featuredProducts.map((product) => (
        <ProductCard product={product} />
      ))}
    </div>

    <div class="text-center mt-16">
      <a 
        href="/shop" 
        class="inline-flex items-center space-x-2 bg-black text-white px-8 py-4 hover:bg-gray-800 transition-colors"
      >
        <span class="tracking-wide">VER TODA LA COLECCIÓN</span>
        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
  </div>
</section>